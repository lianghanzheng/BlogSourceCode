---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile } from '../config/site';
import { getCollection } from 'astro:content';

// 获取博客
const blogPosts = await getCollection('blog');
const recentPosts = blogPosts.slice(0, 2);

// 获取书籍（按 bookTitle 分组）
const bookChapters = await getCollection('books');
const booksByTitle = bookChapters.reduce((acc, chapter) => {
  const title = chapter.data.bookTitle;
  if (!acc[title]) {
    acc[title] = {
      title: title,
      slug: chapter.slug,
      chapterCount: 0,
    };
  }
  acc[title].chapterCount++;
  return acc;
}, {} as Record<string, { title: string; slug: string; chapterCount: number }>);
const recentBooks = Object.values(booksByTitle).slice(0, 2);

// 获取分享论文
const paperReviews = await getCollection('paper-reviews');
const recentReviews = paperReviews.sort((a, b) => b.data.year - a.data.year).slice(0, 2);

// 获取发表论文
const publications = await getCollection('publications');
const recentPublications = publications.sort((a, b) => b.data.year - a.data.year).slice(0, 2);
---

<BaseLayout title="学术主页">
  <div class="flex gap-12 min-h-[calc(100vh-16rem)]">

    <!-- 左侧：个人简介 -->
    <div class="w-72 shrink-0 pt-8">
      <div class="sticky top-8">
        <h1 class="text-4xl font-serif font-bold text-coffee">{profile.name}</h1>
        <p class="text-coffee/70 italic mt-2 font-serif text-lg">{profile.title}</p>
        <div class="h-px w-16 bg-coffee/10 my-4"></div>
        <p class="text-coffee/60 text-sm leading-relaxed whitespace-pre-line">
          {profile.bio}
        </p>
      </div>
    </div>

    <!-- 中间：垂直分割线 -->
    <div class="flex justify-center shrink-0 pt-8">
      <div class="relative w-0.5 h-[30rem] bg-divide">
        <div class="absolute -top-1 -left-1.5 w-3.5 h-3.5 bg-divide rounded-sm"></div>
        <div class="absolute -bottom-1 -left-1.5 w-3.5 h-3.5 bg-divide rounded-sm"></div>
      </div>
    </div>

    <!-- 右侧：四类内容概览 -->
    <div class="flex-1 pt-8">

      <!-- 博客板块 -->
      <section class="mb-16">
        <h2 class="text-2xl font-serif font-bold text-coffee mb-6">博客</h2>
        <div class="space-y-8">
          {recentPosts.map((post, index) => (
            <a
              href={`/blog/${post.slug}`}
              class="flex items-start gap-8 group"
            >
              <!-- 编号卡片 -->
              <div class="shrink-0 select-none">
                <div class="flex h-20 shadow-lg transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-1">
                  <!-- 彩色条带 -->
                  <div class="w-2 h-full bg-sage"></div>
                  <div class="w-2 h-full bg-mustard"></div>
                  <div class="w-1.5 h-full bg-dark-strip"></div>
                  <!-- 数字方块 -->
                  <div class="w-20 h-full flex items-center justify-center bg-coffee">
                    <span class="text-3xl font-black tracking-widest text-orange font-mono">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                  </div>
                </div>
              </div>

              <!-- 内容 -->
              <div class="pt-2 flex-1">
                <h3 class="text-xl font-serif font-semibold text-coffee mb-2 group-hover:text-orange transition-colors duration-300">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-sm text-coffee/60 mb-3 font-serif line-clamp-2">{post.data.description}</p>
                )}
                <p class="text-xs font-mono text-coffee/40">{post.data.repo}</p>
              </div>
            </a>
          ))}
        </div>

        {recentPosts.length === 0 && (
          <p class="text-coffee/40 italic font-serif">暂无博客文章</p>
        )}

        <div class="mt-8">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-sm text-coffee/50 hover:text-orange transition-colors duration-300 group"
          >
            <span class="font-serif italic">查看全部博客</span>
            <span class="transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      </section>

      <!-- 书籍板块 -->
      <section class="mb-16">
        <h2 class="text-2xl font-serif font-bold text-coffee mb-6">书籍</h2>
        <div class="space-y-8">
          {recentBooks.map((book, index) => (
            <a
              href={`/books/${book.slug}`}
              class="flex items-start gap-8 group"
            >
              <!-- 编号卡片 -->
              <div class="shrink-0 select-none">
                <div class="flex h-20 shadow-lg transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-1">
                  <!-- 彩色条带 -->
                  <div class="w-2 h-full bg-sage"></div>
                  <div class="w-2 h-full bg-mustard"></div>
                  <div class="w-1.5 h-full bg-dark-strip"></div>
                  <!-- 数字方块 -->
                  <div class="w-20 h-full flex items-center justify-center bg-coffee">
                    <span class="text-3xl font-black tracking-widest text-orange font-mono">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                  </div>
                </div>
              </div>

              <!-- 内容 -->
              <div class="pt-2 flex-1">
                <h3 class="text-xl font-serif font-semibold text-coffee mb-2 group-hover:text-orange transition-colors duration-300">
                  {book.title}
                </h3>
                <p class="text-sm text-coffee/60 font-serif">
                  {book.chapterCount} 个章节
                </p>
              </div>
            </a>
          ))}
        </div>

        {recentBooks.length === 0 && (
          <p class="text-coffee/40 italic font-serif">暂无书籍</p>
        )}

        <div class="mt-8">
          <a
            href="/books"
            class="inline-flex items-center gap-2 text-sm text-coffee/50 hover:text-orange transition-colors duration-300 group"
          >
            <span class="font-serif italic">查看全部书籍</span>
            <span class="transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      </section>

      <!-- 分享论文板块 -->
      <section class="mb-16">
        <h2 class="text-2xl font-serif font-bold text-coffee mb-6">分享论文</h2>
        <div class="space-y-8">
          {recentReviews.map((review, index) => (
            <a
              href={`/paper-reviews/${review.slug}`}
              class="flex items-start gap-8 group"
            >
              <!-- 编号卡片 -->
              <div class="shrink-0 select-none">
                <div class="flex h-20 shadow-lg transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-1">
                  <!-- 彩色条带 -->
                  <div class="w-2 h-full bg-sage"></div>
                  <div class="w-2 h-full bg-mustard"></div>
                  <div class="w-1.5 h-full bg-dark-strip"></div>
                  <!-- 数字方块 -->
                  <div class="w-20 h-full flex items-center justify-center bg-coffee">
                    <span class="text-3xl font-black tracking-widest text-orange font-mono">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                  </div>
                </div>
              </div>

              <!-- 内容 -->
              <div class="pt-2 flex-1">
                <h3 class="text-xl font-serif font-semibold text-coffee mb-2 group-hover:text-orange transition-colors duration-300">
                  {review.data.title}
                </h3>
                <p class="text-sm text-coffee/60 mb-3 font-serif">{review.data.authors.join(', ')}</p>
                <div class="flex items-center gap-3">
                  <span class="inline-block px-3 py-1 text-xs font-mono bg-coffee/5 text-coffee/70 rounded-full border border-coffee/10">
                    {review.data.venue}
                  </span>
                  <span class="text-xs font-mono text-orange font-medium">{review.data.year}</span>
                </div>
              </div>
            </a>
          ))}
        </div>

        {recentReviews.length === 0 && (
          <p class="text-coffee/40 italic font-serif">暂无分享论文</p>
        )}

        <div class="mt-8">
          <a
            href="/paper-reviews"
            class="inline-flex items-center gap-2 text-sm text-coffee/50 hover:text-orange transition-colors duration-300 group"
          >
            <span class="font-serif italic">查看全部分享</span>
            <span class="transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      </section>

      <!-- 发表论文板块 -->
      <section class="mb-16">
        <h2 class="text-2xl font-serif font-bold text-coffee mb-6">发表论文</h2>
        <div class="space-y-8">
          {recentPublications.map((pub, index) => (
            <a
              href={pub.data.link || '#'}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start gap-8 group"
            >
              <!-- 编号卡片 -->
              <div class="shrink-0 select-none">
                <div class="flex h-20 shadow-lg transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-1">
                  <!-- 彩色条带 -->
                  <div class="w-2 h-full bg-sage"></div>
                  <div class="w-2 h-full bg-mustard"></div>
                  <div class="w-1.5 h-full bg-dark-strip"></div>
                  <!-- 数字方块 -->
                  <div class="w-20 h-full flex items-center justify-center bg-coffee">
                    <span class="text-3xl font-black tracking-widest text-orange font-mono">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                  </div>
                </div>
              </div>

              <!-- 内容 -->
              <div class="pt-2 flex-1">
                <h3 class="text-xl font-serif font-semibold text-coffee mb-2 group-hover:text-orange transition-colors duration-300">
                  {pub.data.title}
                </h3>
                <p class="text-sm text-coffee/60 mb-3 font-serif">{pub.data.authors.join(', ')}</p>
                <div class="flex items-center gap-3">
                  <span class="inline-block px-3 py-1 text-xs font-mono bg-coffee/5 text-coffee/70 rounded-full border border-coffee/10">
                    {pub.data.venue}
                  </span>
                  <span class="text-xs font-mono text-orange font-medium">{pub.data.year}</span>
                </div>
              </div>
            </a>
          ))}
        </div>

        {recentPublications.length === 0 && (
          <p class="text-coffee/40 italic font-serif">暂无发表论文</p>
        )}

        <div class="mt-8">
          <a
            href="/publications"
            class="inline-flex items-center gap-2 text-sm text-coffee/50 hover:text-orange transition-colors duration-300 group"
          >
            <span class="font-serif italic">查看全部论文</span>
            <span class="transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      </section>

    </div>
  </div>
</BaseLayout>
